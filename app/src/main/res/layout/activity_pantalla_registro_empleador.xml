<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/fondoblue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            style="@style/styleTextview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro del Empleador"
            android:textSize="50dp"
            android:layout_gravity="center_horizontal"
            android:textStyle="italic"
            android:textColor="#2196F3"
            android:fontFamily="sans-serif-black"
            android:layout_margin="5dp"/>

    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:padding="3dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewEmpleador"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:onClick="AbrirGaleria"
            android:layout_margin="5dp"
            android:src="@mipmap/onlylogo"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="3dp"
        android:gravity="center_vertical"
        android:background="@drawable/et_bgv2"
        android:orientation="vertical">

        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/icrnc"
            android:hint="Ingrese RNC"
            android:layout_marginLeft="5dp"/>

        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/iconuser"
            android:hint="Ingrese Nombre"
            android:layout_marginLeft="5dp"/>

        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/iccorreo"
            android:hint="Ingrese Correo"
            android:layout_marginLeft="5dp"
            />

        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/ictelefono"
            android:hint="Ingrese Telefono"
            android:inputType="phone"
            android:layout_marginLeft="5dp"
            />


        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/icdireccion"
            android:hint="Ingrese Direccion"
            android:layout_marginLeft="5dp" />


        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/icweb"
            android:hint="Ingrese Pagina Web"
            android:layout_marginLeft="5dp"/>

        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/iconpass"
            android:hint="Ingrese Contraseña"
            android:layout_marginLeft="5dp"/>

        <EditText
            style="@style/styleEdittext"
            android:drawableLeft="@drawable/iconpass"
            android:hint="Confirmar Contraseña"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

        <Button
            android:id="@+id/bttRegistroEmpleador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_bg"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:text="Registrarse" />

</LinearLayout>