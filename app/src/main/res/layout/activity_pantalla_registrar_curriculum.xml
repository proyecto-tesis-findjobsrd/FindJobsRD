<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/fondoblue"
    tools:context=".PantallaRegistrarCurriculum">

    <TextView
        android:id="@+id/textView2"
        style="@style/styleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-black"
        android:text="Registrar Curriculum"
        android:textSize="30dp"
        android:textStyle="italic"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="238dp" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/onlylogo"/>

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="346dp"
        android:gravity="center"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                android:id="@+id/MostrarNombreEmpleo"
                style="@style/styleTextview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="30dp"
                android:textStyle="bold|italic"
                android:paddingTop="5dp"
                android:hint="Datos Generales"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:background="@drawable/bordelayout"
                android:padding="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textnombre"
                    style="@style/textviewRegistrarStyle"
                    android:text="Nombres" />

                <EditText
                    android:id="@+id/editTextnombre"
                    style="@style/styleEdittext"
                    android:hint="Ingrese Nombres" />

                <TextView
                    android:id="@+id/textapellido"
                    style="@style/textviewRegistrarStyle"
                    android:text="Apellidos" />

                <EditText
                    android:id="@+id/editTextapellido"
                    style="@style/styleEdittext"
                    android:hint="Ingrese Apellidos" />

                <TextView
                    android:id="@+id/textcedula"
                    style="@style/textviewRegistrarStyle"
                    android:text="Cedula" />

                <EditText
                    android:id="@+id/editTextcedula"
                    style="@style/styleEdittext"
                    android:hint="Ingrese Cedula"
                    android:inputType="number" />

                <TextView
                    android:id="@+id/textprovincia"
                    style="@style/textviewRegistrarStyle"
                    android:text="Provincia" />

                <Spinner
                    android:id="@+id/spinnerProvinciasRegistrarCurriculo"
                    style="@style/styleSpinner" />

                <TextView
                    android:id="@+id/textdireccion"
                    style="@style/textviewRegistrarStyle"
                    android:text="Direccion" />

                <EditText
                    android:id="@+id/editTextdireccion"
                    style="@style/styleEdittext"
                    android:drawableLeft="@drawable/icdireccion"
                    android:hint="Ingrese Direccion" />

                <TextView
                    android:id="@+id/texttelefono"
                    style="@style/textviewRegistrarStyle"
                    android:text="Telefono" />

                <EditText
                    android:id="@+id/editTexttelefono"
                    style="@style/styleEdittext"
                    android:drawableLeft="@drawable/ictelefono"
                    android:hint="Ingrese Telefono"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/textcelular"
                    style="@style/textviewRegistrarStyle"
                    android:text="Celular" />

                <EditText
                    android:id="@+id/editTextcelular"
                    style="@style/styleEdittext"
                    android:drawableLeft="@drawable/iccelular"
                    android:hint="Ingrese Celular"
                    android:inputType="phone" />

                <TextView
                    android:id="@+id/textemail"
                    style="@style/textviewRegistrarStyle"
                    android:text="Email" />

                <EditText
                    android:id="@+id/editTextemail"
                    style="@style/styleEdittext"
                    android:drawableLeft="@drawable/icemail"
                    android:hint="Ingrese E-mail" />


                <TextView
                    android:id="@+id/textestadocivil"
                    style="@style/textviewRegistrarStyle"
                    android:text="Estado Civil" />

                <Spinner
                    android:id="@+id/spinnerEstadoCivilRegistrarCurriculo"
                    style="@style/styleSpinner" />

                <TextView
                    android:id="@+id/textsexo"
                    style="@style/textviewRegistrarStyle"
                    android:text="Sexo" />

                <Spinner
                    android:id="@+id/spinnersexoRegistrarCurriculo"
                    style="@style/styleSpinner" />

                <TextView
                    android:id="@+id/textArea"
                    style="@style/textviewRegistrarStyle"
                    android:text="Area" />

                <Spinner
                    android:id="@+id/spinnerAreasRegistrarCurriculo"
                    style="@style/styleSpinner" />

                <TextView
                    android:id="@+id/textfechdenacimiento"
                    style="@style/textviewRegistrarStyle"
                    android:text="Fecha de Nacimiento" />

                <EditText
                    android:id="@+id/editTextfechdenacimiento"
                    style="@style/styleEdittext"
                    android:hint="Ingrese Fecha de Nacimiento" />

            </LinearLayout>

             <TextView
                    android:id="@+id/avisoFormacionAcademica"
                    style="@style/styleTextview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30dp"
                    android:textStyle="bold|italic"
                    android:paddingTop="5dp"
                    android:hint="Formacion Academica"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/bordelayout"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textgradoCurriculo"
                        style="@style/textviewRegistrarStyle"
                        android:text="Formacion academica" />

                    <Spinner
                        android:id="@+id/spinnerGradoRegistrarCurriculo"
                        style="@style/styleSpinner" />

                    <TextView
                        android:id="@+id/textidioma"
                        style="@style/textviewRegistrarStyle"
                        android:text="Idioma" />

                    <Spinner
                        android:id="@+id/spinnerIdiomas"
                        style="@style/styleSpinner" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textCentro"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Centro "/>

                        <EditText
                            android:id="@+id/registrarEmpleoCentro"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Centro"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textregistrarNivelGrado"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nivel Educativo" />


                            <Spinner
                                android:id="@+id/spinnerGradonivrRegistrarCurriculo"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textAnodeestudioregistrarempleo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Año"/>

                            <Spinner
                                android:id="@+id/spinnerAnodeEstudio"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/textCentroSegundo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Centro "/>

                        <EditText
                            android:id="@+id/registrarEmpleoCentroSegundo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Centro"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical"
                            android:padding="10dp">

                            <TextView
                                android:id="@+id/textregistrarNivelGradoSegundo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Nivel Educativo" />


                            <Spinner
                                android:id="@+id/spinnerGradonivrRegistrarCurriculoSegundo"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:layout_margin="10dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/textAnodeestudioregistrarempleoSegundo"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:hint="Año"/>

                            <Spinner
                                android:id="@+id/spinnerAnodeEstudioSegundo"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"/>
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/textOtrosCursosRegistrarCurriculos"
                        style="@style/textviewRegistrarStyle"
                        android:text="Descripcion"/>

                    <EditText
                        android:id="@+id/editTextOtrosCursos"
                        style="@style/styleEdittext"
                        android:hint="Ingrese Otros Cursos Realizados"/>



            </LinearLayout>



                <TextView
                    android:id="@+id/textexperiencia"
                    style="@style/textviewRegistrarStyle"
                    android:text="Centro/Nivel/Año" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textanoFormacionacademica"
                        style="@style/textviewRegistrarStyle"
                        android:text="Años de Experiencia" />

                    <Spinner
                        android:id="@+id/spinnernivelcurriculo"
                        style="@style/styleSpinner" />

                    <Spinner
                        android:id="@+id/spinneraño"
                        style="@style/styleSpinner" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textanodeexperiencia"
                    style="@style/textviewRegistrarStyle"
                    android:text="Años de Experiencia" />

                <Spinner
                    android:id="@+id/spinneranodeexperiencia"
                    style="@style/styleSpinner" />

                <TextView
                    android:id="@+id/textreferenciaslaborales"
                    style="@style/textviewRegistrarStyle"
                    android:text="Referencias Laborales" />

                <EditText
                    android:id="@+id/editTextreferenciaslaborales"
                    style="@style/styleEdittext"
                    android:drawableLeft="@drawable/iconuser"
                    android:hint="Ingrese Experiencias Laborales" />



                <TextView
                    android:id="@+id/texthabilidadesycompetencias"
                    style="@style/textviewRegistrarStyle"
                    android:text="Habilidades y Competencias" />

                <EditText
                    android:id="@+id/editTexthabilidadesycompetencias"
                    style="@style/styleEdittext"
                    android:drawableLeft="@drawable/iconuser"
                    android:hint="Ingrese Habilidades y Competencias" />



















                <TextView
                    android:id="@+id/avisoOtrosDatos"
                    style="@style/styleTextview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30dp"
                    android:textStyle="bold|italic"
                    android:paddingTop="5dp"
                    android:hint="Otros Datos"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/bordelayout"
                    android:padding="10dp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/textestadoDisponibilidad"
                        style="@style/textviewRegistrarStyle"
                        android:text="Estado" />

                    <Spinner
                        android:id="@+id/spinnerEstadoDisponibilidad"
                        style="@style/styleSpinner" />

                    <TextView
                        android:id="@+id/textfechapublicacion"
                        style="@style/textviewRegistrarStyle"
                        android:text="Fecha de Publicacion" />

                    <EditText
                        android:id="@+id/editTextfechapublicacion"
                        style="@style/styleEdittext"
                        android:drawableLeft="@drawable/iconuser"
                        android:hint="Ingrese Fecha de Publicacion" />

                    <TextView
                        android:id="@+id/textocupacionactual"
                        style="@style/textviewRegistrarStyle"
                        android:text="Ocupacion Actual" />

                    <EditText
                        android:id="@+id/editTextocupacionactual"
                        style="@style/styleEdittext"
                        android:drawableLeft="@drawable/iconuser"
                        android:hint="Ingrese Ocupacion Actual" />
                </LinearLayout>

                <TextView
                    android:id="@+id/avisoDescripcionNotaEmpleo"
                    style="@style/styleTextview"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30dp"
                    android:textStyle="bold|italic"
                    android:paddingTop="5dp"
                    android:hint="Habilidades y Conocimientos en el Area"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:background="@drawable/bordelayout"
                    android:padding="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textdeHabilidadesyConocimientos"
                        style="@style/textviewRegistrarStyle"
                        android:text="Descripcion"/>

                    <EditText
                        android:id="@+id/editTextHabilidadesyConocimientos"
                        style="@style/styleEdittext"
                        android:hint="Ingrese Habilidades y Conocimientos"/>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:layout_marginTop="20dp"
        android:layout_margin="20dp"
        android:text="Registrar" />

</LinearLayout>