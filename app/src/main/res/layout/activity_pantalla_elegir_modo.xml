<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/fondoblue"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".PantallaElegirModo">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="222dp"
        android:layout_height="170dp"
        android:src="@mipmap/onlylogo" />

    <TextView
        android:id="@+id/textView2"
        style="@style/styleTextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:fontFamily="sans-serif-black"
        android:text="Elegir Modo"
        android:textSize="50dp"
        android:textColor="#2196F3"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btnSerBuscador"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="#FFFFFF"
        android:background="@drawable/buttonshape"
        android:text="Buscador de Empleo"/>

    <Button
        android:id="@+id/btnSerEmpleador"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/buttonshape"
        android:text="Empresa/Empleador"
        android:textColor="#FFFFFF" />

</android.widget.LinearLayout>
