<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/fondoblue"
    tools:context=".PantallaAcercaDe">


    <TextView
        android:id="@+id/textViewacercade"
        style="@style/TextviewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Acerca De"
        android:textSize="30dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:fontFamily="sans-serif-black"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/imageViewacercade"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginEnd="8dp"
        android:src="@mipmap/onlylogo"/>

    <TextView
        android:id="@+id/textViewnombreapp"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:text="FindjobsRD"
        android:textSize="30dp"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textColor="#0288D1"
        android:fontFamily="sans-serif-black"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/textViewversion"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Version 1.0"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:textStyle="italic"
        android:textColor="#0288D1"
        />



    <TextView
        android:id="@+id/textViewanosdelaapp"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="2019 - 2019 FindjobsRD"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="#0288D1"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/textViewadatos"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Creada por:"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="#0288D1"
        android:layout_marginTop="90dp"
        />


    <TextView
        android:id="@+id/textViewlifer"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Ing. Lifer Mayi Ferreira"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="#0288D1"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:id="@+id/textViewenmanuel"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Ing. Enmanuel Cruz"
        android:textSize="20dp"
        android:layout_gravity="center_horizontal"
        android:textStyle="italic"
        android:textColor="#0288D1"
        android:layout_marginTop="5dp"
        />




</LinearLayout>