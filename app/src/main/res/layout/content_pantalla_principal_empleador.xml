<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
app:layout_behavior="@string/appbar_scrolling_view_behavior"
tools:context=".PantallaPrincipalBuscador"
android:orientation="vertical"
android:background="@mipmap/fondoblue"
tools:showIn="@layout/app_bar_pantalla_principal_empleador">


<ImageView
    android:id="@+id/imageView"
    android:layout_width="222dp"
    android:layout_height="170dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="60dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="8dp"
    android:adjustViewBounds="true"
    android:cropToPadding="false"
    android:layout_gravity="center"
    android:src="@mipmap/onlylogo"/>

<TextView
    android:id="@+id/textView2"
    style="@style/styleTextview"
    android:layout_width="322dp"
    android:layout_height="60dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:text="Elija Opcion a Realizar"
    android:layout_gravity="center"
    android:textStyle="italic"
    android:textColor="#2196F3"
    android:fontFamily="sans-serif-black"
    android:textSize="30dp"/>

<Button
    android:id="@+id/buttonRegistrarEmpleo"
    android:layout_width="316dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/buttonshape"
    android:text="Añadir Empleo"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:textColor="#FFFFFF" />


<Button
    android:id="@+id/buttonBuscarCurriculos"
    android:layout_width="316dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/buttonshape"
    android:text="Buscar Curriculos"
    android:textStyle="bold"
    android:layout_gravity="center"
    android:textColor="#FFFFFF" />

<Button
    android:id="@+id/button2"
    android:layout_width="316dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="30dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/buttonshape"
    android:text="Empleos Añadidos"
    android:layout_gravity="center"
    android:textColor="#FFFFFF"
    android:textStyle="bold"/>



</android.widget.LinearLayout>

